<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res'
		type='com.aggfi.digest.client.resources.GlobalResources' />
	<ui:with field='constants'
		type='com.aggfi.digest.client.constants.ConstantsImpl' /> 
		<g:HTMLPanel>
		<g:VerticalPanel width='{constants.basicWidthStr}' stylePrimaryName='{res.globalCSS.highlightRow}'>
			<g:VerticalPanel>
				<g:VerticalPanel>
						<g:VerticalPanel ui:field="adsensePanel">
							<g:Label text='Please select the mode:'></g:Label>
							<g:HorizontalPanel>
								<g:RadioButton name="mode" checked='true' ui:field="radioBtnViewMode"></g:RadioButton>
								<g:Label text='View'></g:Label>
								<g:HTML width="50px"></g:HTML>
								<g:RadioButton name="mode" ui:field="radioBtnEditMode"></g:RadioButton>
								<g:Label text='Edit'></g:Label>
							</g:HorizontalPanel >
							<g:CaptionPanel captionText='AdSense code'>
								<g:TextArea characterWidth='65' visibleLines='11' ui:field="adsenseCodeTxtArea"></g:TextArea>
							</g:CaptionPanel>
							
							<g:Label text='AdSense unit linked to:'></g:Label>
							<g:HorizontalPanel>
								<g:RadioButton name="adsense" checked='true' ui:field="radioBtnUser"></g:RadioButton>
								<g:Label text='User: vega113@googlewave.com'></g:Label>
							</g:HorizontalPanel>
							<g:HorizontalPanel>
								<g:RadioButton name="adsense" ui:field="radioBtnForum"></g:RadioButton>
								<g:SimplePanel ui:field="prjListContainer"></g:SimplePanel>
							</g:HorizontalPanel>
							<g:HorizontalPanel horizontalAlignment='ALIGN_CENTER'>
								<g:HTML width='180px'></g:HTML>
								<g:Button text='Submit' ui:field="submitAdsenseCodeBtn"></g:Button>
							</g:HorizontalPanel>
						</g:VerticalPanel>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
